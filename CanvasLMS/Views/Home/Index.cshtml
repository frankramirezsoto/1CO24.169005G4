@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutNone.cshtml";
}
<style>
    .card{
        transition: .5s;
    }

    .card::before {
            transition: .5s;
            transform: scale(.9);
    }

        .card:hover {
            color: #fff;
            box-shadow: 0 0 25px #fff;
            text-shadow: 0 0 25px #fff;
        }

            .card:hover::before {
                transform: scale(1.1);
                box-shadow: 0 0 15px #fff;
            }
</style>

<main style="background-image: url(@Url.Content("~/assets/images/HomeBackground.jpg"));background-position:center;min-height:100vh!important">

    <div>
        <img class="p-4" src="@Url.Content("~/assets/images/logo-white.png")" />
    </div>

    <div class="text-center text-white" style="margin-bottom:6rem">
        <h4 class="fs-4">Welcome to</h4>
        <h1 class="fw-bolder fs-1">CANVAS</h1>
    </div>

    <div class="d-flex justify-content-center" style="padding-bottom:6rem">
        <div class="row g-5">
            <div class="col">
                <a href="@Url.Content("~/Login")" class="text-decoration-none ">
                    <div class="card border-0" style="width: 18rem;">
                        <img src="@Url.Content("~/assets/images/Login1.jpg")" class="card-img-top" alt="Login photo" />
                        <div class="card-body text-center" style="background-color:#F17200">
                            <p class="card-text fw-bold text-white">Student</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="@Url.Content("~/Login")" class="text-decoration-none">
                    <div class="card border-0" style="width: 18rem;">
                        <img src="@Url.Content("~/assets/images/Login2.jpg")" class="card-img-top" alt="Login photo" />
                        <div class="card-body text-center" style="background-color:#F17200">
                            <p class="card-text fw-bold text-white">Professor</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</main>
