@model CanvasLMS.Models.ViewModels.EvaluationItemViewModel
@{
    var courseCycleId = ViewData["CourseCycleId"] as int?;
}

<div class="p-3">
    <div class="text-center mb-3">
        <h4>Create a New Evaluation Item</h4>
    </div>
   <form id="createItemForm" asp-action="CreateItem" method="post">

        <div class="row">
            <input type="hidden" id="CourseCycleId" name="CourseCycleId" value="@courseCycleId" />

            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label>
                        <input type="checkbox" id="attendanceCheckbox" />
                        Evaluation is for attendance
                    </label>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Percentage"></label>
                    <input asp-for="Percentage" class="form-control" />
                </div>
            </div>

            <div class="col-12">
                <div class="form-group mb-3">
                    <input asp-for="IsGroupal" class="form-check-input" />
                    <label asp-for="IsGroupal">In Groups</label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Evaluation Item</button>
            </div>
        </div>

   </form>
</div>